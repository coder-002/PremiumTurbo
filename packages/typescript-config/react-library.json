{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",

  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "jsxImportSource": "react",
    "types": ["react", "react-dom", "node"]
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
